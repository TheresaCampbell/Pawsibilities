<%= render 'layouts/top_nav' %>

<div class="login">

  <h1>Login</h1>

  <p id="error"><%= flash[:error] %></p>

  <%= form_tag '/login' do %>

  Email: <%= text_field_tag :email, nil,  class: "form-input" %><br>
  Password: <%= password_field_tag :password, nil,  class: "form-input" %>
  <%= submit_tag "Submit", class: "btn btn-light btn-md submit" %>

  <% end %>

  <div>
    Dont't have an account? Click <a href="/signup", class="embedded-link">here</a> to register.
  </div>

  <%= image_tag "login.jpg", class: "login-img" %>

</div>