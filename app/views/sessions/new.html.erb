<div class="login">
  <h1>Login</h1>

  <%= form_tag '/login' do %>

    Email: <%= text_field_tag :email %><br>
    Password: <%= password_field_tag :password %>
    <%= submit_tag "Submit" %>

  <% end %>

  <div>
    Dont't have an account? Click <a href="/signup">here</a> to register.
  </div>
</div>