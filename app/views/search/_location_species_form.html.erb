<!-- get request to search endpoint, pass option for method: get -->

<%= form_tag("/search", method: "get") do %>

  <p>
    Animal Type : <%= f.select params[:animal_type], ["Dog", "Cat", "Other"]%>
    City : <%= f.select params[:city], ["Toronto", "Scarborough"]%>
    <%= submit_tag("Search") %>
  </p>
<% end %>

