<%= render 'layouts/top_nav' %>

<main class="profile-grid">

<section class="user-profile">
  <div class="profile-information">
    <dd>Name: <%= @shelter.name %></dd>
    <dd>Email: <%= @shelter.email %></dd>
    <dd>Phone: <%= @shelter.phone %></dd>
    <dd>Address: <%= @shelter.address %></dd>
  </div>

  <button class="show-form">Add Pet</button>
  <div class="pet-form">
    Place a pet for adoption.
    <%= form_for :pet, url: '/pets' do |f| %>

      Choose your city. <%= f.select :city, Pet::CITIES %><br>
      What type of animal is it? <%= f.select :animal_type, Pet::ANIMAL_TYPES, :prompt => "~select an animal_type~" %><br>
      What breed is it? <%= f.select :breed, :prompt => "~select an breed~" %><br>
      Gender? <%= f.select :gender, Pet::GENDERS, :prompt => "~select a gender~" %><br>
      Do they have a name? <%= f.text_field :name, class: "form-input" %><br>
      What size are they? <%= f.select :size, Pet::SIZES, :prompt => "~select a size~" %><br>
      How old are they? <%= f.select :age, Pet::AGES, :prompt => "~select an age~" %><br>
      Please add a description: <%= f.text_area :description %>
      Add a photo: <%= f.file_field :photo %>
      <%= console %>

      <%= f.submit "Submit", class: "btn btn-light btn-md submit" %>

    <% end %>
  </div>

</section>


<section class="user-pets">

</section>

</main>
